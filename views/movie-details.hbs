<div class="container">
  <div class="row">
    <div class="col-md-4">
      <img
        src="{{movie.image}}"
        alt="{{movie.title}}"
        class="img-fluid rounded"
        style="width: 150%;"
      />
    </div>
    <div class="col-md-8">
      <h1>{{movie.title}}</h1>
      <h3>Directed by:</h3><p> {{movie.director}}</p>

      <h3>Starring:</h3>
      <ul>
        {{#each movie.stars}}
          <li><p>{{this}}</p></li>
        {{/each}}
      </ul>
      <h3>Summary:</h3>
      <p> {{movie.description}}</p>
      <h3>Showtime:</h3>
      <div class="duration">
        <ul class="list-inline">
          {{#each movie.showtimes}}
            <li class="list-inline-item"><p>{{this}}</p></li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>
<a class="badge badge-primary" href="/movies">Go back to movies</a>